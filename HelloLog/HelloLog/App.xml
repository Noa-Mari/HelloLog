<log4net>
  <appender name="MainAppender" type = "log4net.Appender.ConsolAppender">
    <layout type = "log4net.Layout.PatternLayout">
      <conversionPattern value = "%-timestamp [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="/Users/noamari/Desktop/mamas2/HelloLog/HelloLog/HelloLog/fileAppender.log" />
    <appendenToFile value="true" />
    <maximumFileSize value="1MB" />
    <maxSizeRollBackups value="10" />

    <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value = "%-4timestamp [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <root>
    <level value = "DEBUG"/>
    <appender-ref ref="MainAppender"/>
    <appender-ref ref="FileAppender"/>
  </root>

</log4net>

